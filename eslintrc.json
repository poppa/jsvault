{
  "rules": {
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ]
  },
  "env": {
    "es6": false,
    "browser": true
  },
  "globals": {
    "PoppaCalendar" : true,
    "jQuery" : true,
    "$" : true
  },
  "extends": "eslint:recommended"
}
